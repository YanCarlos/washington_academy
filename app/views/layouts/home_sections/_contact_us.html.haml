%span.anchor#contact_us
.counter
  .counter_background
  .container
    .row
      .col-lg-6
        .counter_content
          %h1.counter_title_1 Contáctanos
          %h2.counter_title Puedes hacer parte de nosotros. ¡Wii!
          .counter_text
            %p Escribe un mensaje y pronto nos comunicaremos contigo.
    .counter_form
      .row
        .col
          = form_for @contacting, url: :save_contactings, html: {class: "counter_form_content d-flex flex-column align-items-center"} do |f|
            .justify-content-center
              = f.text_field :name, {:placeholder => "Nombre", :required => "required", class: 'counter_input'}
              = f.text_field :phone, {:placeholder => "Telefono", :required => "required", class: 'counter_input'}
              = f.text_area :message, {:placeholder => "Mensaje", :required => "required", class: 'counter_input'}
              = f.submit 'Enviar', class: 'counter_form_button red-button'
              
