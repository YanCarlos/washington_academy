.options-admin
  .section-title Editing student
  = link_to 'Back', :back
= bootstrap_form_for @student, :url => { :controller => :students, action: :update}, html:{class: 'form-main form-depend'} do |f|
  = render partial: 'utils/flash_messages'
  = render partial: 'students/fields', locals:{f:f}
  .row.justify-content-end
    .col-md-2
      = f.submit 'Update', class: 'btn btn-lg btn-primary btn-block red-button'

