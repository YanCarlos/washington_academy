.options-admin
  .section-title Creating a new teacher
  = link_to 'Back', :back
= bootstrap_form_for @teacher, :url => { :controller => :teachers}, html:{class: 'form-main form-depend'} do |f|
  = render partial: 'utils/flash_messages'
  = render partial: 'teachers/fields', locals:{f:f}
  .row.justify-content-end
    .col-md-2
      = f.submit 'Save', class: 'btn btn-lg btn-primary btn-block red-button'


