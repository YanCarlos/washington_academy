.row
  .col-md-3
    = render partial: 'utils/avatar_uploader', locals: { f: f, object: @teacher }
  .col-md-9
    .row
      .col-md-4
        = f.text_field :name, placeholder: 'Name ', required: 'required'
      .col-md-4
        = f.number_field :identification, placeholder: 'identification', required: 'required'
      .col-md-4
        = f.email_field :email, placeholder: 'Email', required: 'required'
      .col-md-4
        = f.phone_field :phone, placeholder: 'Phone', required: 'required'
      .col-md-8
        = f.text_field :address, placeholder: 'Address', required: 'required'
      .col-md-4
        = f.form_group :terms, label: { text: 'Do you want to enable this teacher?' } do
          = f.check_box :active, label: 'Enable'
