.col-md-6
  .options-admin
    .section-title Group's Teachers
    %button.btn.btn-link{onclick: 'open_modal("#add_teacher_to_group")', type:'button'}
      %span.glyphicon.glyphicon-plus
      Add teacher
  .row.justify-content-md-center
    .col-md-12.col-md-auto
      .table
        .head
          .row
            .col-md-6.column
              Name
            .col-md-4.column
              Phone
            .col-md-2.column.justify-end
              Options
        - @group.teachers.each_with_index do |student, index|
          .row{class: ('pair' if index % 2 == 0)}
            .col-md-6.column.bold
              = render_avatar(student.avatar.url)
              %a{href: edit_teacher_path(student)}
                = student.name
            .col-md-4.column
              = student.phone
            .col-md-2.column.justify-end
              %a.btn.btn-sm.btn-actions{href: edit_teacher_path(student),'data-toggle':'tooltip', title:'Edit teacher'}
                %i.fa.fa-pencil
              %a.btn.btn-sm.btn-actions{href: delete_teacher_from_group_path({group_id: @group.id, teacher_id: student.id}), 'data-toggle':'tooltip', title:'Remove teacher from this group'}
                %i.fa.fa-minus-circle



