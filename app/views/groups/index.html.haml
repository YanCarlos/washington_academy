.options-admin
  .section-title List of groups
  - if can? :create, :group
    = link_to 'New group', new_group_path

.row.justify-content-md-center
  .col-md-12.col-md-auto
    = render partial: 'utils/flash_messages'
    .table
      .head
        .row
          .col-md-3.column
            Name
          .col-md-7.column
            Description
          .col-md-2.column
            Options
      - groups =  current_user.groups.order(id: :desc)
      - if can? :manage, :group
        - groups =  @groups.order(id: :desc)
      - groups.order(id: :desc).each_with_index do |group, index|
        .row{class: ('pair' if index % 2 == 0)}
          .col-md-3.column.bold
            - if can? :manage, :group
              %a{href: edit_group_path(group)}
                = group.name
            - if cannot? :manage, :group
              %a{href: group_path(group)}
                = group.name
          .col-md-7.column
            = group.description
          .col-md-2.column
            - if can? :create, Activity
              = link_to 'Add activity', new_group_activity_path(group)
            - if can? :manage, :group
              %a.btn.btn-sm.btn-actions{href: edit_group_path(group)}
                %i.fa.fa-pencil
              = link_to_delete_helper group, 'Would you like to delete this group?'



