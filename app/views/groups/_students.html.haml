.col-md-6
  .row
    .col-md-12
      .options-admin
        .section-title Enabled students
      .row.justify-content-md-center
        .col-md-12.col-md-auto
          .table
            .head
              .row
                .col-md-6.column
                  Name
                .col-md-4.column
                  Phone
                .col-md-2.column.justify-end
                  Options
            - @group.students.where(active: true).each_with_index do |student, index|
              .row{class: ('pair' if index % 2 == 0)}
                .col-md-6.column.bold
                  = render_avatar(student)
                  %a{href: edit_student_path(student)}
                    = student.name
                .col-md-4.column
                  = student.phone
                .col-md-2.column.justify-end
                  - if can? :manage, :student
                    %a.btn.btn-sm.btn-actions{href: edit_student_path(student),'data-toggle':'tooltip', title:'Edit student'}
                      %i.fa.fa-pencil
